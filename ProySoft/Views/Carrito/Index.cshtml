@model IEnumerable<ProySoft.Models.Sucursales>

@{
    ViewData["Title"] = "Carrito";
    Layout = "_LayoutCustom";
}

<h1>Shopping cart</h1>
<hr class="text-muted"/> You currently have @ViewBag.cart.Count item(s) in your cart <hr./>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
            <th>Option</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>

        </thead>
        <tbody>
        @foreach (var item in ViewBag.cart)
        {
            <tr style="font-size: x-large">
                <td><a asp-controller="Carrito" asp-action="remove" asp-route-id="@item.Combos.Id"><i class="fa fa-trash-o"></i></a></td>
                <td>@item.Combos.Name</td>
                <td><img src="~/Images/@item.Combos.Imagen" width="60" /> </td>
                <td>@item.Combos.Price</td>
                <td>@item.Cantidad</td>
                <td>@(item.Combos.Price * item.Cantidad)</td>
            </tr>
        }
        

        </tbody>
        
        <tr>
            <td align="right" colspan="6" style="font-size: x-large">Total</td>
            <td style="font-size: x-large">
                @ViewBag.total
            </td>
        </tr>
    </table>
    </div>
    <br>
<select>
    <option value="0">Seleccione una sucursal</option>
    @foreach(var item in Model)
    {
       <option value="@item.Id">@item.Localidad</option>
    }   
</select>

<a asp-controller="Home" asp-action="Index" style="font-size: x-large">Confirm</a>

<br />

<a asp-controller="Combos" asp-action="Index" style="font-size: x-large">Continue Shopping</a>